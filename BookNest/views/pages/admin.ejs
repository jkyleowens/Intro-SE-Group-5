<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #bfe9ff);
            min-height: 100vh;
            font-family: 'Arial', sans-serif;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }
        .card-header {
            background: #5baafe;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
            padding: 1.5rem 1rem;
        }
        .card-header h1 {
            font-size: 1.8rem;
            font-weight: bold;
        }
        .btn-danger {
            background-color: #dc3545;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        .form-control {
            border-radius: 10px;
        }
    </style>
</head>
<body>
     <!-- Navbar -->
     <nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
        <a class="navbar-brand" href="/">BookNest</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                
                        <li class="nav-item">
                            <span class="nav-link text-muted" style="font-weight: 500; font-size: 1.1rem; padding: 5px 10px; background-color: #82b9f3; border-radius: 15px; color: white !important;">
                                Hello, Admin
                            </span>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin">Admin Dashboard</a></li>
                        
                        
                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                
            </ul>
        </div>
    </nav>
    
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h1>Admin Dashboard</h1>
                        <p>Manage Users and Books</p>
                    </div>
                    <div class="card-body">
                        <% if (flashMessage.length > 0) { %>
                            <div class="alert alert-info" role="alert">
                                <%= flashMessage %>
                            </div>
                        <% } %>
                        <!-- User Management -->
                        <h3>Manage Users</h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><%= user.id %></td>
                                        <td><%= user.username %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.role %></td>
                                        <td>
                                            <form action="/admin/delete-user" method="POST" class="d-inline">
                                                <input type="hidden" name="userId" value="<%= user.id %>">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>

                        <!-- Book Management -->
                        <h3>Manage Books</h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Author</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% books.forEach(book => { %>
                                    <tr>
                                        <td><%= book.id %></td>
                                        <td><%= book.name %></td>
                                        <td><%= book.author %></td>
                                        <td><%= book.price %></td>
                                        <td>
                                            <form action="/admin/delete-book" method="POST" class="d-inline">
                                                <input type="hidden" name="bookId" value="<%= book.id %>">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
