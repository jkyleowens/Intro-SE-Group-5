<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom Styling */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #f8f9fa, #bfe9ff);
        }
        .navbar-brand {
            font-weight: bold;
            color: #82b9f3;
        }
        .navbar-brand:hover {
            color: #004085;
        }
        .hero {
            background: url('https://via.placeholder.com/1500x500?text=Welcome+to+BookNest') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 120px 0;
            text-align: center;
        }
        .hero h1 {
            font-size: 3.5rem;
            font-weight: bold;
        }
        .hero p {
            font-size: 1.2rem;
            margin-top: 10px;
        }
        .card img {
            height: 200px;
            object-fit: cover;
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }
        .btn-custom {
            background-color: #5baafe;
            color: white;
        }
        .btn-custom:hover {
            background-color: #004085;
            color: white;
        }
        footer {
            background-color: #f1f1f1;
            padding: 20px 0;
            margin-top: 40px;
        }
        footer a {
            color: #0056b3;
            text-decoration: none;
        }
        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
        <a class="navbar-brand" href="/">BookNest</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if (user && user.role === 'seller') { %>
                    <li class="nav-item">
                        <span class="nav-link text-muted" style="font-weight: 500; font-size: 1.1rem; padding: 5px 10px; background-color: #82b9f3; border-radius: 15px; color: white !important;">
                            Hello, <%= user.username %>
                        </span>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/add-book">Add Book</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                <% } else if (user && user.role === 'buyer') { %>
                    <li class="nav-item">
                        <span class="nav-link text-muted" style="font-weight: 500; font-size: 1.1rem; padding: 5px 10px; background-color: #82b9f3; border-radius: 15px; color: white !important;">
                            Hello, <%= user.username %>
                        </span>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    
                    <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                    <% } else if (user && user.role === 'admin') { %>
                        <li class="nav-item">
                            <span class="nav-link text-muted" style="font-weight: 500; font-size: 1.1rem; padding: 5px 10px; background-color: #82b9f3; border-radius: 15px; color: white !important;">
                                Hello, Admin
                            </span>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin">Admin Dashboard</a></li>
                        
                        
                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                <% } else { %>
                    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                <% } %>
            </ul>
        </div>
    </nav>
    
    

    <!-- Hero Section -->
    <div class="hero">
        <h1>Welcome to BookNest</h1>
        <p>Your one-stop shop for the best books around the globe.</p>
        <a href="#books" class="btn btn-custom btn-lg mt-3">Browse Books</a>
    </div>
    <div class="container mt-5">
    
    
        
    </div>
    
    <!-- Main Content -->
    <div class="container mt-5" id="books">
        <% if (flashMessage) { %>
            <div class="alert alert-info" role="alert">
                <%= flashMessage %>
            </div>
        <% } %>
        <% if (books.length > 0) { %>
        <div class="row" style="margin-bottom: 40px;">
            <form style="float:right;" action="/search" method="GET" class="form-inline ml-auto">
                <input class="form-control mr-2" type="text" name="query" placeholder="Search books..." aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-md-4">
                    <div class="card shadow-sm mb-4">
                        <img src="<%= book.cover_image %>" class="card-img-top" alt="<%= book.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.name %></h5>
                            <p class="card-text">Author: <%= book.author %></p>
                            <p class="card-text text-success font-weight-bold">Price: $<%= book.price.toFixed(2) %></p>
                            <form action="/add-to-cart" method="POST">
                                <input type="hidden" name="bookId" value="<%= book.id %>">
                                <!-- <button type="submit" class="btn btn-custom btn-block">Add to Cart</button> -->
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %><% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div>
            &copy; 2024 BookNest. All rights reserved. 
            <a href="/about">About Us</a> | 
            <a href="/contact">Contact</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
