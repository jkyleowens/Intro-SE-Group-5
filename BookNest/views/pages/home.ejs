<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">BookNest</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <header>
            <h1 class="text-center">Welcome to BookNest</h1>
        </header>

        <% if (flashMessage) { %>
            <div class="alert alert-info" role="alert">
                <%= flashMessage %>
            </div>
        <% } %>

        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= book.cover_image %>" class="card-img-top" alt="<%= book.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.name %></h5>
                            <p class="card-text">Author: <%= book.author %></p>
                            <p class="card-text">Price: $<%= book.price.toFixed(2) %></p>
                            <form action="/add-to-cart" method="POST">
                                <input type="hidden" name="bookId" value="<%= book.id %>">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- View Cart Button -->
        <div class="text-center mt-4">
            <a href="/cart" class="btn btn-success">View Cart</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="text-center p-3">
            <p>&copy; 2024 BookNest. All rights reserved.</p>
            <a class="text-dark" href="/about">About Us</a> | 
            <a class="text-dark" href="/contact">Contact</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html> 